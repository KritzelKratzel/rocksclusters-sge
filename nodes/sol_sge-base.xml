<?xml version="1.0" standalone="no"?>

<kickstart>

	<description>

	Sun Grid Engine support

	</description>

	<changelog>
	$Log: sol_sge-base.xml,v $
	Revision 1.1  2008/11/30 19:32:48  anoop
	Added support for SGE on Solaris
	
	</changelog>

	<package>SUNWmfrun</package>
	<package>ROCKSge</package>
	<package>ROCKSrocks-sge</package>

<post>
SGE_UID=400
SGE_GID=400

/usr/sbin/groupadd -g $SGE_GID sge

/usr/sbin/useradd -c "GridEngine" -u $SGE_UID -g sge \
	-s /bin/true -d /opt/gridengine sge 2> /dev/null
</post>


<post>

<file name="/etc/profile.d/sge-mpi.csh" perms="0755">
setenv MPICH_PROCESS_GROUP no
</file>

<file name="/etc/profile.d/sge-mpi.sh" perms="0755">
export MPICH_PROCESS_GROUP=no
</file>

<file name="/etc/man.config" mode="append">
MANPATH /opt/gridengine/man
</file>
</post>

<post>
crle -64 -u -l /opt/gridengine/lib/sol-amd64
crle -u -l /opt/gridengine/lib/sol-x86
</post>

</kickstart> 
